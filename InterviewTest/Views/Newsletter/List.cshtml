@model InterviewTest.Controllers.NewsletterListViewModel

@{
    ViewBag.Title = "Saved newsletters";
}

<div class="jumbotron">
    <h1>@ViewBag.Title</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="row">
            @using (Html.BeginForm("create", "Newsletter", FormMethod.Post))
            {
                <h2>Create newsletters</h2>
                <label>How many <input type="number" name="count" value="10" /></label>
                <label>Format <input type="text" name="formatter" value="@Model.setString" /> (T=trip, H=Host) </label>
                <p>Example TTTHHTTT fr 3 trips, 2 hosts, 3 trips.</p>

                <label>Group items together? <input type="checkbox" name="seperate" id="seperate" @Model.seperate /></label>
                <h4>Example</h4>
                <table class="tbl">
                    <tr>
                        <td id="ExOn">
                            <b>ON</b>
                            <table id="exampleWith">
                                <tr><td>T</td><td>T</td></tr>
                                <tr><td colspan="2">T</td></tr>
                                <tr><td>H</td><td>H</td></tr>
                                <tr><td>T</td><td>T</td></tr>
                            </table>

                        </td>
                        <td id="ExOff">
                            <b>OFF</b>
                            <table id="exampleWithout">
                                <tr><td>T</td><td>T</td></tr>
                                <tr><td>T</td><td>H</td></tr>
                                <tr><td>H</td><td>T</td></tr>
                                <tr><td>T</td></tr>
                            </table>

                        </td>

                    </tr>
                </table>
                <button class="btn btn-default" type="submit">Create newsletters</button>
            }
        </div>
        <div class="row">
            <table class="tbl">
                <tr>
                    <td>
                        Trips used<br />
                        <ul>
                            @foreach (var v in Model.res)
                            {
                                <li>@v</li>
                            }
                        </ul>
                    </td>
                    <td>
                        Hosts used<br />
                        <ul>
                            @foreach (string v in Model.res2)
                            {
                                <li>@v</li>
                            }
                        </ul>
                    </td>
                </tr>
            </table>
        </div>
        <div class="row">
            <h2>View sample newsletter</h2>
            <a href="@Url.Action("sample", "newsletter")" class="btn btn-default">View</a>
        </div>

    </div>

    @if (Model.Newsletters.Any())
    {
        <div class="col-md-4">
            <table class="table">
                <tr><th>Id</th><th>Created At</th></tr>
                @foreach (var newsletter in Model.Newsletters.OrderByDescending(n => n.Id))
                {
                    <tr>
                        <td><a href="@Url.Action("Display", new {newsletter.Id})">@newsletter.Id</a></td>
                        <td>@newsletter.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    </tr>

                }
            </table>
        </div>

        <div class="col-md-4">
            <h2>Delete all</h2>
            @using (Html.BeginForm("deleteall", "Newsletter", FormMethod.Post))
            {
                <button type="submit" class="btn btn-default">Delete</button>
            }
        </div>

    }

</div>
<script type="text/javascript">
    // Lazy I Know...

    function Toggler(x) {
        var $state = $(x).prop("checked");
        $('#exampleWith >tbody > tr > td').each(function (a, b) { $state ? $(b).addClass("bold").removeClass("notbold") : $(b).removeClass("bold").addClass("notbold"); });
        $('#exampleWithout > tbody > tr >td').each(function (a, b) { !$state ? $(b).addClass("bold").removeClass("notbold") : $(b).removeClass("bold").addClass("notbold"); });
    }

    $('#seperate').click(function () { Toggler(this); });

    Toggler($('#seperate'));

</script>